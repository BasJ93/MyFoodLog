FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env

ARG COMMIT="unknown"
ARG VERSION="0.0.0+unknown"

WORKDIR /App

COPY ./MyFoodLog.API MyFoodLog.API
COPY ./MyFoodLog.ClientApis MyFoodLog.ClientApis
COPY ./MyFoodLog.Core MyFoodLog.Core
COPY ./MyFoodLog.Database MyFoodLog.Database
COPY ./MyFoodLog.Models MyFoodLog.Models

RUN dotnet restore ./MyFoodLog.API/MyFoodLog.API.csproj

RUN dotnet publish -c Release -o out ./MyFoodLog.API/MyFoodLog.API.csproj -p:SourceRevisionId=$COMMIT -p:Version=$VERSION

FROM mcr.microsoft.com/dotnet/aspnet:6.0
WORKDIR /App
MKDIR Database
COPY --from=build-env /App/out ./
ENTRYPOINT ["dotnet", "MyFoodLog.API.dll"]