@page "/Diary"
@using MyFoodLog.Web.API.Client.Interfaces
@using MyFoodLog.Web.Components

<style>
    table.mdc-data-table__table {
        white-space: normal;!important;
        width: 100%;
    }
</style>

<div class="mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-2-tablet"></div>
<div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
            <div class="mdc-layout-grid__inner">
                <DatePickerComponent DateChanged="DateChanged" />
                <div class="mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-0-tablet mdc-layout-grid__cell--span-0-phone">
                    <h6 class="mdc-typography--headline6">(@TotalEnergyConsumed.ToString("0.##") kCal)</h6>
                </div>
                <div class="mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-0-tablet mdc-layout-grid__cell--span-0-phone" style="text-align: center;">
                    <MBIconButton Icon="add" style="margin: 42px 0;" @onclick="@(() => NavigationService?.NavigateTo(""))"/>
                </div>
                <div class="mdc-layout-grid__cell--span-0-desktop mdc-layout-grid__cell--span-7-tablet mdc-layout-grid__cell--span-3-phone">
                    <h6 class="mdc-typography--headline6" style="margin-block: 0px;">(@TotalEnergyConsumed.ToString("0.##") kCal)</h6>
                </div>
                <div class="mdc-layout-grid__cell--span-0-desktop mdc-layout-grid__cell--span-1-tablet mdc-layout-grid__cell--span-1-phone" style="text-align: center;">
                    <MBIconButton Icon="add" style="margin-block: 0px; padding: 0px" @onclick="@(() => NavigationService?.NavigateTo(""))"/>
                </div>
            </div>
        </div>

        @foreach (MealDto meal in Meals)
        {
            if (meal.ConsumedFood.Any())
            {
                <MealOverviewComponent Meal="meal" CollectionModified="DayItemsModified"/>
            }
        }

    </div>
</div>
<div class="mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-2-tablet"></div>

@code {

    [CascadingParameter]
    public MainLayoutMaterial? Layout { get; set; }

    [Inject]
    private IMyFoodLogApi? FoodLogApi { get; set; }

    [Inject]
    private IMBToastService? ToastService { get; set; }

    [Inject]
    private NavigationManager? NavigationService { get; set; }

    private decimal TotalEnergyConsumed { get; set; }

    private List<MealDto> Meals { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (Layout != null)
        {
            Layout.Title = "Diary";
        }

        await GetDayOverview(DateTime.Now);

        await base.OnInitializedAsync();
    }

    private async Task GetDayOverview(DateTime date, CancellationToken ctx = default)
    {
        try
        {
            if (FoodLogApi != null)
            {
                Meals = (await FoodLogApi.Day_GetMealsAsync(date, "1", ctx)).ToList();

                TotalEnergyConsumed = Meals.Sum(m => m.ConsumedFood.Sum(c => c.Energy));
            }
        }
        catch (ApiException)
        {
        }

        await InvokeAsync(StateHasChanged);
    }

    private async Task DayItemsModified()
    {
        await GetDayOverview(DateTime.Now);

        await InvokeAsync(StateHasChanged);
    }

    private async Task DateChanged(DateTime obj)
    {
        await GetDayOverview(obj, CancellationToken.None);
    }

}